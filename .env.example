# Environment Configuration
ENVIRONMENT=production

# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://windoor_user:your_secure_password_here@postgres:5432/windoor_config

# Backend Configuration
SECRET_KEY=your_secret_key_here_min_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Frontend Configuration
VITE_API_URL=http://localhost:8000/api
VITE_ENVIRONMENT=production

# Optional: Custom domain configuration
# DOMAIN=yourdomain.com
# BACKEND_URL=https://api.yourdomain.com
# FRONTEND_URL=https://yourdomain.com

# Render.com specific (for deployment)
RENDER_SERVICE_NAME=windoor-config
RENDER_REGION=frankfurt

# Security (for production)
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Storage Configuration
STORAGE_PATH=/app/storage
CSV_FILE_PATH=/app/Rozszerzona_tabela_opcji.csv