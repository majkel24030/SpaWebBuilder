# Backend Environment Variables
# Copy this file to .env and fill in the actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/windoor_config

# Security
SECRET_KEY=your-super-secret-key-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:5000", "http://localhost:3000"]

# Environment
ENVIRONMENT=development
PYTHON_VERSION=3.11

# For production on Render.com, these will be set automatically:
# DATABASE_URL=postgresql://windoor_user:password@hostname:port/windoor_config
# SECRET_KEY=auto-generated-by-render
# BACKEND_CORS_ORIGINS=["https://your-frontend-url.onrender.com"]
# ENVIRONMENT=production