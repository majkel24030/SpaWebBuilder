modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["pango", "cairo", "harfbuzz", "ffmpeg", "fontconfig"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend FastAPI Server"

[[workflows.workflow]]
name = "Backend FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && pip install -r requirements.txt && python -m uvicorn app.main:app --host 0.0.0.0 --port 5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd backend && pip install -r requirements.txt && python -m uvicorn app.main:app --host 0.0.0.0 --port 5000"]

[[ports]]
